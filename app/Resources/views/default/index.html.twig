{% extends 'base.html.twig' %}

{% block body %}
    <my-app>Loading...</my-app>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <style>
        body{padding-top:70px;}
        .row {margin-left: 0; margin-right: 0;}
    </style>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('node_modules/es6-shim/es6-shim.min.js') }}"></script>
    <script src="{{ asset('node_modules/systemjs/dist/system-polyfills.js') }}"></script>

    <script src="{{ asset('node_modules/angular2/bundles/angular2-polyfills.js') }}"></script>
    <script src="{{ asset('node_modules/systemjs/dist/system.src.js') }}"></script>
    <script src="{{ asset('node_modules/rxjs/bundles/Rx.js') }}"></script>
    <script src="{{ asset('node_modules/angular2/bundles/angular2.dev.js') }}"></script>

    <script src="{{ asset('node_modules/angular2/bundles/http.dev.js') }}"></script>

    <script>
        System.config({
            packages: {
                app: {
                    format: 'register',
                    defaultExtension: 'js',
                    baseUrl: "{{ asset('') }}"
                }
            },
            defaultJSExtension: true
        });
        System.import("{{ asset('app/main.js') }}").then(null, console.error.bind(console));
    </script>
{% endblock %}
